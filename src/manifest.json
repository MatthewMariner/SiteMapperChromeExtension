{
  "manifest_version": 3,
  "name": "Site Structure Navigator",
  "version": "1.1.0",
  "version_name": "1.1.0",
  "description": "Complete site mapping with SEO analysis, status checking, theme support, and export tools for comprehensive website audits",
  "author": "Mariner Digital Agency",
  "homepage_url": "https://github.com/MatthewMariner/SiteMapperChromeExtension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
